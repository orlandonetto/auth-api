{
  "name": "zextify-api-sso",
  "version": "1.0.0",
  "description": "system for authentication (sso)",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "test": "jest --detectOpenHandles --runInBand",
    "build": "docker build -t zextify-api-sso . && docker tag zextify-api-sso gcr.io/zextify-dev/zextify-api-sso && docker push gcr.io/zextify-dev/zextify-api-sso",
    "deploy": "gcloud run deploy zextify-api-sso --image gcr.io/zextify-dev/zextify-api-sso --platform managed --port 5000 --allow-unauthenticated --region southamerica-east1",
    "deploy:functions": "gcloud functions deploy zextify-api-sso --trigger-http --runtime nodejs18 --allow-unauthenticated --region southamerica-east1 --memory 128MB --max-instances 1 --timeout 30s"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zextify/zextify-api-sso.git"
  },
  "keywords": [
    "zextify",
    "sso",
    "auth"
  ],
  "author": "Zextify Development",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/zextify/zextify-api-sso/issues"
  },
  "homepage": "https://github.com/zextify/zextify-api-sso#readme",
  "dependencies": {
    "bcrypt": "^5.1.0",
    "body-parser": "^1.20.1",
    "celebrate": "^15.0.1",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "express-async-errors": "^3.1.1",
    "jsonwebtoken": "^9.0.0",
    "moment": "^2.29.4",
    "mongoose": "^6.8.4",
    "morgan": "^1.10.0",
    "nodemailer": "^6.9.1",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "eslint": "^8.32.0",
    "eslint-config-standard": "^17.0.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-n": "^15.6.1",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.4.1",
    "nodemon": "^2.0.20",
    "sinon": "^15.0.1",
    "supertest": "^6.3.3"
  }
}
